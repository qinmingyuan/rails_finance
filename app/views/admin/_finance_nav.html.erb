    <%= link_to t('finance.admin.budgets.index.title'), { controller: 'finance/admin/budgets' }, class: active_helper(controllers: 'budgets', active: 'is-active') %>
    <%= link_to t('finance.admin.expenses.index.title'), { controller: 'finance/admin/expenses' }, class: active_helper(controllers: 'expenses', active: 'is-active') %>
