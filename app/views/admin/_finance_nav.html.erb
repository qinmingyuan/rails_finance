  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-solid fa-money-bill fa-fw"></i>
    <span><%= t('finance.admin.title') %></span>
    <i class="fa-solid dropdown"></i>
  </a>
  <div class="menu-list">
    <%= link_to t('finance.admin.funds.index.title'), { controller: 'finance/admin/funds' }, class: active_helper(controllers: ['funds', 'fund_budgets', 'fund_incomes', 'fund_expenses'], active: 'is-active') %>
