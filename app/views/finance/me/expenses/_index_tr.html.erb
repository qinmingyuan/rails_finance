<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <span data-show-target="item" style="visibility: hidden">
      <%= link_to 'History', audits_path(model.class.base_class.name, model.id), class: 'button is-small is-rounded is-light' %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-light fa-pencil"></i>
      <% end if ['init', 'rejected'].include? model.state %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.confirm') } }) do %>
        <i class="fa-light fa-trash"></i>
      <% end if ['init', 'rejected'].include? model.state %>
    </span>
  </td>
</tr>
