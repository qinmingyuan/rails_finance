<td><%= model.subject %></td>
<td><%= model.member.name %></td>
<td><%= model.amount %></td>
<td>
  <span class="tag"><%= model.state_i18n %></span>
  <% if model.can_operate?(current_member) %>
    <div class="buttons has-addons">
      <%= link_to({ controller: 'auditor/admin/verifications', verified_type: 'Finance::Budget', verified_id: model.id }, class: 'button is-primary') do %>
        <i></i><span>Approve</span>
      <% end %>
      <%= link_to({ controller: 'auditor/admin/verifications', verified_type: 'Finance::Budget', verified_id: model.id, state: 'rejected' }, class: 'button is-danger') do %>
        <i></i><span><%= Finance::Budget.enum_i18n(:state, 'rejected') %></span>
      <% end %>
    </div>
  <% end %>
</td>
<td><time data-controller="time"><%= model.created_at.to_s(:iso8601) %></time></td>
