<%= render 'shared/error_messages', target: @budget %>
<%= f.text_field :subject, required: true %>
<%=
  f.collection_select(
      :financial_taxon_id,
      @financial_taxons, :id, :name,
      { include_blank: true },
      { data: { controller: 'typer', method: 'post', url: financial_taxons_me_budgets_url } }
  )
%>
