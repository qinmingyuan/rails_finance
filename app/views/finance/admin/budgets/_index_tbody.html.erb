<td><%= model.subject %></td>
<td><%= model.member.name %></td>
<td><%= model.amount %></td>
<td class="tags">
  <span class="tag"><%= model.state_i18n %></span>
  <% if model.can_operate?(current_member) %>
    <div class="buttons has-addons">
      <%= link_to 'Approve', new_admin_verification_path('Budget', model.id), class: 'button is-primary' %>
      <%= link_to Budget.enum_i18n(:state, 'rejected'), new_admin_verification_path('Budget', model.id, state: 'rejected'), class: 'button is-danger' %>
    </div>
  <% end %>
</td>
<td><time data-controller="time"><%= model.created_at.to_s(:iso8601) %></time></td>
