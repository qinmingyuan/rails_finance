<tr>
  <td><%= budget.subject %></td>
  <td><%= budget.member.name %></td>
  <td><%= budget.amount %></td>
  <td class="tags">
    <span class="tag"><%= budget.state_i18n %></span>
    <% if budget.can_operate?(current_member) %>
      <div class="buttons has-addons">
        <%= link_to 'Approve', new_admin_verification_path('Budget', budget.id), remote: true, class: 'button is-primary' %>
        <%= link_to Budget.enum_i18n(:state, 'rejected'), new_admin_verification_path('Budget', budget.id, state: 'rejected'), remote: true, class: 'button is-danger' %>
      </div>
    <% end %>
  </td>
  <td><time><%= budget.created_at.to_s(:rfc822) %></time></td>
  <td>
    <%= link_to({ action: 'show', id: budget.id }, { aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: budget.id }, { aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: budget.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
