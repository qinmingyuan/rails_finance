<tr data-depth="<%= financial_taxon.depth_str %>">
  <td>
    <span style="width: <%= financial_taxon.depth * 1.43 %>em; display: inline-block"></span>
    <% if !financial_taxon.leaf? %>
      <i class="fas fa-caret-down fa-fw" data-action="click->tree#collapse" style="cursor: pointer"></i>
    <% else %>
      <i class="fas fa-minus fa-fw"></i>
    <% end %>
    <span><%= financial_taxon.name %></span>
  </td>
  <td>
    <% financial_taxon.verifiers.each do |verifier| %>
      <p><%= verifier.job_title.name %><%= verifier.member&.name %></p>
    <% end %>
    <p>
      <%= link_to new_admin_verifier_path('FinancialTaxon', financial_taxon.id), remote: true, class: 'button is-rounded is-small' do %>
        <i class="fas fa-user-check"></i>
      <% end %>
    </p>
  </td>
  <td>
    <div data-controller="input">
      <%= check_box_tag '[financial_taxon]take_stock', nil, financial_taxon.take_stock, data: { method: :patch, remote: true, url: admin_financial_taxon_path(financial_taxon), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
      <label></label>
    </div>
  </td>
  <td>
    <div data-controller="input">
      <%= check_box_tag '[financial_taxon]individual', nil, financial_taxon.individual, data: { method: :patch, remote: true, url: admin_financial_taxon_path(financial_taxon), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
      <label></label>
    </div>
  </td>
  <td>
    <%= link_to edit_admin_financial_taxon_path(financial_taxon), aria: { label: t('.edit') }, remote: true, class: 'button is-rounded is-small' do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to admin_financial_taxon_path(financial_taxon), aria: { label: t('.destroy') }, method: :delete, data: { confirm: t('.confirm') }, remote: true, class: 'button is-rounded is-small' do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
