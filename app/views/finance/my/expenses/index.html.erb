<%= render 'nav_expense' %>

<%= render 'filter_form' %>
<%= render 'filter_table' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Expense.human_attribute_name(:type) %></th>
      <th><%= Expense.human_attribute_name(:subject) %></th>
      <th><%= Expense.human_attribute_name(:amount) %></th>
      <th><%= Expense.human_attribute_name(:proof) %></th>
      <th><%= Expense.human_attribute_name(:state) %></th>
      <th>
        <%= link_to new_my_expense_path(type: 'BudgetExpense'), remote: true, class: 'button is-link' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.type_i18n %></td>
      <td><%= link_to expense.subject, my_expense_path(expense) %></td>
      <td><%= expense.amount %></td>
      <td>
        <%= link_to expense.proof.filename, rails_blob_path(expense.proof, disposition: 'attachment') if expense.proof.attached? %>
      </td>
      <td>
        <span class="ui label"><%= expense.state_i18n %></span>
      </td>
      <td class="ui labels">
        <%= link_to 'History', audits_path(expense.class.base_class.name, expense.id), remote: true, class: 'ui orange label' %>
        <% if ['init', 'rejected'].include? expense.state %>
          <%= link_to t('.edit'), edit_my_expense_path(expense), remote: true, class: 'ui pink label' %>
          <%= link_to t('.destroy'), my_expense_path(expense), method: :delete, data: { confirm: t('.confirm') }, class: 'ui red label' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @expenses %>
