<%= form_with theme: 'search', model: Expense.new do |f| %>
  <div class="fields">
    <%= f.text_field :'subject-like' %>
    <%= f.submit %>
  </div>
<% end %>

<dl>
  <dt>State:</dt>
  <dd>
    <%= link_to t('.all'), filter_params(except: [:state]), class: active_params(state: '', active_class: 'button is-info', item_class: 'button is-light') %>
    <% Expense.states.keys.each do |state| %>
      <%= link_to Expense.enum_i18n(:state, state), filter_params(state: state), class: active_params(state: state, active_class: 'button is-info', item_class: 'button is-light') %>
    <% end %>
  </dd>
</dl>

